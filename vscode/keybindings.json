// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "ctrl+v",
        "command": "cursorPageDown",
        "when": "textInputFocus"
    },
    {
        "key": "alt+v",
        "command": "cursorPageUp",
        "when": "textInputFocus"
    },
    {
        "key": "pageup",
        "command": "-cursorPageUp",
        "when": "textInputFocus"
    },
    {
        "key": "pagedown",
        "command": "-cursorPageDown",
        "when": "textInputFocus"
    },
    {
        "key": "alt+f",
        "command": "japaneseWordHandler.cursorWordEndRight",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+right",
        "command": "-japaneseWordHandler.cursorWordEndRight",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+b",
        "command": "japaneseWordHandler.cursorWordStartLeft",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+left",
        "command": "-japaneseWordHandler.cursorWordStartLeft",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+d",
        "command": "japaneseWordHandler.deleteWordEndRight",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "alt+delete",
        "command": "-japaneseWordHandler.deleteWordEndRight",
        "when": "textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+l",
        "command": "recenterTopBottom"
    },
    {
        "key": "cmd+[IntlRo]",
        "command": "-workbench.action.zoomOut"
    },
    {
        "key": "cmd+[IntlRo]",
        "command": "workbench.action.splitEditor"
    },
    {
        "key": "k",
        "command": "list.focusUp",
        "when": "explorerViewletFocus && listFocus &&explorerViewletVisible && !inputFocus"
    },
    {
        "key": "j",
        "command": "list.focusDown",
        "when": "explorerViewletFocus && listFocus &&explorerViewletVisible && !inputFocus"
    },
    {
        "key": "h",
        "command": "list.collapse",
        "when": "explorerViewletFocus && listFocus &&explorerViewletVisible && !inputFocus"
    },
    {
        "key": "l",
        "command": "list.expand",
        "when": "explorerViewletFocus && listFocus &&explorerViewletVisible && !inputFocus"
    },
    {
        "key": "a",
        "command": "explorer.newFile",
        "when": "explorerViewletFocus && listFocus &&explorerViewletVisible && !inputFocus"
    },
    {
        "key": "shift+a",
        "command": "explorer.newFolder",
        "when": "explorerViewletFocus && listFocus &&explorerViewletVisible && !inputFocus"
    },
    {
        "key": "d",
        "command": "deleteFile",
        "when": "explorerViewletFocus && listFocus &&explorerViewletVisible && !inputFocus"
    },
    {
        "key": "r",
        "command": "renameFile",
        "when": "explorerViewletFocus && listFocus &&explorerViewletVisible && !inputFocus"
    },
    {
        "key": "enter",
        "command": "list.select",
        "when": "explorerViewletFocus && listFocus &&explorerViewletVisible && !inputFocus"
    },
    {
        "key": "ctrl+shift+b",
        "command": "cursorLeftSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+left",
        "command": "-cursorLeftSelect",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+n",
        "command": "cursorDownSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+down",
        "command": "-cursorDownSelect",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+p",
        "command": "cursorUpSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+up",
        "command": "-cursorUpSelect",
        "when": "textInputFocus"
    },
    {
        "key": "ctrl+shift+f",
        "command": "cursorRightSelect",
        "when": "textInputFocus"
    },
    {
        "key": "shift+right",
        "command": "-cursorRightSelect",
        "when": "textInputFocus"
    }
]